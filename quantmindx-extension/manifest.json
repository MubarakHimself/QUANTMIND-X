{
    "manifest_version": 3,
    "name": "QuantMindX Article Collector",
    "version": "1.0.0",
    "description": "Save MQL5 articles for QuantMindX knowledge base",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "notifications"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}